{
	"name": "svelte-grid-5-ts",
	"license": "MIT",
	"description": "A responsive, draggable and resizable grid layout written in TypeScript for Svelte 5",
	"author": "gobbls https://github.com/gobbls/svelte-grid-5-ts",
	"version": "1.0.11",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run prepack",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check ."
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/gobbls/svelte-grid-5-ts"
	},
	"homepage": "https://github.com/gobbls/svelte-grid-5-ts/blob/master/README.md",
	"files": [
		"dist",
		"src",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/kit": "^2.47.1",
		"@sveltejs/package": "^2.5.4",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"publint": "^0.3.14",
		"svelte": "^5.41.0",
		"svelte-check": "^4.3.3",
		"typescript": "^5.9.3",
		"vite": "^7.1.10"
	},
	"keywords": [
		"svelte",
		"grid",
		"drag",
		"draggable",
		"resize",
		"resizable",
		"fluid",
		"responsive"
	]
}
